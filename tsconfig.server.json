{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "./dist"
  },
  "include": [
    "server.ts",
    "src/routes/**/*",
    "src/middleware/**/*",
    "src/models/**/*",
    "src/types.ts",
    "src/config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/components",
    "src/context",
    "src/hooks"
  ]
}
