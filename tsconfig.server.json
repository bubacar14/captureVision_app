{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "./dist",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"]
  },
  "include": [
    "server.ts",
    "src/routes/**/*",
    "src/middleware/**/*",
    "src/models/**/*",
    "src/types/**/*",
    "src/types.ts",
    "src/config.ts",
    "src/vite-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/components",
    "src/context",
    "src/hooks"
  ]
}
