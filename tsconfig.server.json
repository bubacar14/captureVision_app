{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "isolatedModules": false
  },
  "include": [
    "server.ts",
    "models/**/*",
    "src/routes/**/*",
    "src/middleware/**/*",
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/App.tsx",
    "src/main.tsx",
    "**/*.test.ts"
  ]
}
