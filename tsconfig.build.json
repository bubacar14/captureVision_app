{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "server.ts",
    "src/routes",
    "src/middleware",
    "src/models"
  ]
}
